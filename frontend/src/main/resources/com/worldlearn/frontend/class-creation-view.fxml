<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.worldlearn.frontend.ClassCreatorController"
      spacing="20">

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Create A Class" style="-fx-font-size:22; -fx-font-weight:bold;"/>
        <Pane HBox.hgrow="ALWAYS"/>
    </HBox>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <HBox spacing="10" alignment="CENTER_LEFT">
        <Label text="Create A Class" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Button fx:id="deleteBtn" text="Delete"
                style="-fx-background-color: #ff6b6b; -fx-text-fill: white;"/>
        <Button fx:id="saveBtn" text="Save"
                style="-fx-background-color: #a29bfe; -fx-text-fill: white;"/>
    </HBox>

    <VBox>
        <Label text="Class Name"/>
        <TextField fx:id="nameField" promptText="Enter a Class Name..."/>
    </VBox>
    <HBox spacing="20" alignment="TOP_LEFT">
        <VBox>
          <Label text="Add Students"/>
           <ListView fx:id="studentsList"/>
        </VBox>

        <VBox>
            <Label text="Your Class"/>
            <Button fx:id="removeBtn" text="Remove Student(s)"/>
            <ListView fx:id="classStudentsList"/>
        </VBox>
    </HBox>
    <Button fx:id="addBtn" text="Add Student(s)"/>
</VBox>
