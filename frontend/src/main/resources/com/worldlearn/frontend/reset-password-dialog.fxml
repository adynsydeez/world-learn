<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.worldlearn.frontend.ResetPasswordDialogController"
      spacing="15" alignment="CENTER_LEFT"
      prefWidth="400">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Reset Password" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="New Password"/>
    <PasswordField fx:id="passwordField" promptText="Enter new password"/>

    <Label text="Re-type Password"/>
    <PasswordField fx:id="retypePasswordField" promptText="Re-enter new password"/>

    <Label fx:id="errorLabel" textFill="red"/>
    <Label fx:id="successLabel" textFill="#0e8010"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#onCancel"/>
        <Button text="Update Password" onAction="#onUpdatePassword" styleClass="primary-btn"/>
    </HBox>
</VBox>