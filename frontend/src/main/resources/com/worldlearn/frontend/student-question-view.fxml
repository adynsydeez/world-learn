<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.Rectangle?>

<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.worldlearn.frontend.StudentQuestionViewController" spacing="14" style="-fx-padding:20;">
    <HBox spacing="10">
        <VBox spacing="10" minWidth="100">
            <Button fx:id="homeButtonLessonPage" text="Profile" onAction="#onProfileButtonClickLessonPage" style="-fx-background-radius:10; -fx-padding:6 12;"/>
            <Button fx:id="profileButtonLessonPage" text="home" onAction="#onHomeButtonClickLessonPage" style="-fx-background-radius:10; -fx-padding:6 12;"/>
            <Button text="Back" style="-fx-background-radius:10; -fx-padding:6 12;" onAction="#quizView"/>
        </VBox>
        <VBox spacing="10">
            <Label fx:id="lessonTitleLabel" text="Lesson Title" style="-fx-font-size:22; -fx-font-weight:bold;"/>

            <HBox spacing="10">
                <VBox>
                    <Label text="\%"/>
                    <AnchorPane xmlns:fx="http://javafx.com/fxml" prefWidth="400" prefHeight="300">
                        <!-- A blue rectangle with black border -->
                        <Rectangle
                                x="0"
                                y="0"
                                width="20"
                                height="500"
                                fill="green"
                        />
                    </AnchorPane>
                </VBox>
                <VBox spacing="10" style="-fx-padding: 20 0 0 0;" HBox.hgrow="ALWAYS" prefWidth="2000">
                    <HBox spacing="10" style="-fx-background-color:#dbdbdb; -fx-background-radius:20; -fx-padding:20; -fx-cursor:hand;" onMouseClicked="#onQuestionSelected"  >
                        <Label text="Question 1" style="-fx-font-size:22; -fx-font-weight:bold;"/>
                    </HBox>
                    <HBox spacing="10" style="-fx-background-color:#dbdbdb; -fx-background-radius:20; -fx-padding:20; -fx-cursor:hand;">
                        <Label text="Question 2" style="-fx-font-size:22; -fx-font-weight:bold;"/>
                    </HBox>
                    <HBox spacing="10" style="-fx-background-color:#dbdbdb; -fx-background-radius:20; -fx-padding:20; -fx-cursor:hand;">
                        <Label text="Question 3" style="-fx-font-size:22; -fx-font-weight:bold;"/>
                    </HBox>
                    <HBox spacing="10" style="-fx-background-color:#dbdbdb; -fx-background-radius:20; -fx-padding:20; -fx-cursor:hand;">
                        <Label text="Question 4" style="-fx-font-size:22; -fx-font-weight:bold;"/>
                    </HBox>
                    <HBox spacing="10" style="-fx-background-color:#dbdbdb; -fx-background-radius:20; -fx-padding:20; -fx-cursor:hand;">
                        <Label text="Question 5" style="-fx-font-size:22; -fx-font-weight:bold;"/>
                    </HBox>
                    <HBox spacing="10" style="-fx-background-color:#dbdbdb; -fx-background-radius:20; -fx-padding:20; -fx-cursor:hand;">
                        <Label text="Question 6" style="-fx-font-size:22; -fx-font-weight:bold;"/>
                    </HBox>
                </VBox>
            </HBox>
        </VBox>
    </HBox>

</VBox>

