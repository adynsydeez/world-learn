<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.worldlearn.frontend.EditProfileDialogController"
      spacing="15" alignment="CENTER_LEFT"
      prefWidth="400">

    <padding><Insets top="20" right="20" bottom="20" left="20"/></padding>

    <Label text="Edit Profile" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <Label text="First Name"/>
    <TextField fx:id="firstNameField" promptText="e.g. John"/>

    <Label text="Last Name"/>
    <TextField fx:id="lastNameField" promptText="e.g. Smith"/>

    <Label text="Email"/>
    <TextField fx:id="emailField" promptText="e.g. student1@edu.com"/>

    <Label fx:id="errorLabel" textFill="red"/>
    <Label fx:id="successLabel" textFill="#0e8010"/>

    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#onCancel"/>
        <Button text="Save Changes" onAction="#onSaveChanges" styleClass="primary-btn"/>
    </HBox>
</VBox>